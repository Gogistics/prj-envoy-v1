load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

filegroup(
    name = "certs",
    srcs = [
        "//utils/certs:atai-envoy.com.crt",
        "//utils/certs:atai-envoy.com.key",
    ],
)

go_library(
    name = "api-v1_lib",
    srcs = ["main.go"],
    importpath = "github.com/Gogistics/prj-envoy-v1/services/api-v1",
    visibility = ["//visibility:private"],
    deps = ["//services/api-v1/utilhandlers"],
)

go_binary(
    name = "api-v1",
    embed = [":api-v1_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "api-v1_test",
    srcs = ["main_test.go"],
    embed = [":api-v1_lib"],
    deps = [
        "//services/api-v1/types:default",
        "//services/api-v1/utilhandlers",
        "@com_github_google_go_cmp//cmp",
    ],
)

# docker build
load("@io_bazel_rules_docker//container:container.bzl", "container_image", "container_push")

container_image(
    name = "api-v0.0.0",  # image tag
    base = "@alpine_linux_amd64//image",
    entrypoint = [
        "/api-v1",
    ],
    files = [
        ":api-v1",
        ":certs",
    ],
    repository = "alantai/prj-envoy-v1",
    visibility = ["//visibility:public"],
)
# ref: https://github.com/bazelbuild/rules_docker/blob/master/container/image.bzl

# declare where and how the image will be published
container_push(
    name = "push-api",
    format = "Docker",
    image = ":api-v0.0.0",
    registry = "index.docker.io",
    repository = "alantai/prj-envoy-v1",
    tag = "v0.0.0",
)
# \docker build
